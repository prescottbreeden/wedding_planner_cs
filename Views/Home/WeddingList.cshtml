@model Dashboard

<h1>Welcome @Model.User.FirstName to the Wedding Planner</h1>
<br>
<div style="text-align: right">
    <a href="/logout" ><h4>Log Out<h4></a>
</div>

<p>Number of Weddings: @Model.Weddings.Count</p>
<br>

<div class="container" style="width: 100%">
    <table style="width: 100%">
        <tr>
            <th style="width: 10%">ID</th>
            <th style="width: 20%">Wedding</th>
            <th style="width: 20%">Date</th>
            <th style="width: 20%">Guest</th>
            <th style="width: 30%">Action</th>
        </tr>
        @{
            foreach(var wedd in @Model.Weddings)
            {
            <tr>
                <td>@wedd.WeddingId</td>
                <td> @wedd.WedderOneFirstName & @wedd.WedderTwoFirstName </td>
                <td>@wedd.Date</td>
                <td>@wedd.Wedders.Count </td>
                <td>
                    <a href="/@wedd.WeddingId" class="button" style="margin-left: 20px;">Detail</a>
                </td>
                if(@wedd.Wedders.Any(w => w.GuestId == @Model.User.UserId)
                {
                    <td>UN-RSVP</td>
                }
                else
                {
                    <td>RSVP</td>
                }
            </tr>
            }
        }
    </table>
</div>
<br>
<div style="text-align: right">
    <a href="/newwedding" ><h4>New Wedding<h4></a>
</div>
